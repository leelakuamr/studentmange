<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.student.controller.EditViewController">
   <top>
      <VBox>
         <children>
            <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Add Student" />
            <Separator prefWidth="400.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <GridPane hgap="10.0" vgap="15.0">
               <columnConstraints>
                  <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="80.0" />
                  <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="35.0" prefHeight="35.0" />
                  <RowConstraints minHeight="35.0" prefHeight="35.0" />
                  <RowConstraints minHeight="35.0" prefHeight="35.0" />
                  <RowConstraints minHeight="35.0" prefHeight="35.0" />
               </rowConstraints>
               <children>
                  <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Label text="Course:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="courseField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="ageField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="15.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Button fx:id="saveButton" onAction="#handleSave" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Save" />
            <Button fx:id="cancelButton" onAction="#handleCancel" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #757575; -fx-text-fill: white;" text="Cancel" />
         </children>
      </HBox>
   </bottom>
</BorderPane>

