<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.student.controller.MainViewController">
   <top>
      <VBox alignment="CENTER" spacing="10.0">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Student Management System" />
            <Separator prefWidth="400.0" />
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="studentTableView" prefHeight="400.0" prefWidth="600.0">
         <columns>
            <TableColumn prefWidth="75.0" text="ID" fx:id="idColumn" />
            <TableColumn prefWidth="150.0" text="Name" fx:id="nameColumn" />
            <TableColumn prefWidth="180.0" text="Email" fx:id="emailColumn" />
            <TableColumn prefWidth="120.0" text="Course" fx:id="courseColumn" />
            <TableColumn prefWidth="75.0" text="Age" fx:id="ageColumn" />
         </columns>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="15.0">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Button fx:id="addButton" onAction="#handleAdd" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Add" />
            <Button fx:id="editButton" onAction="#handleEdit" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" text="Edit" />
            <Button fx:id="deleteButton" onAction="#handleDelete" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" text="Delete" />
         </children>
      </HBox>
   </bottom>
</BorderPane>

